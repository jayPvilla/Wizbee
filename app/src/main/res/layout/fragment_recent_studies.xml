<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:scrollbarThumbVertical="@drawable/scrollbar_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingEnd="20dp"
        android:background="@color/yellow"
        tools:ignore="RtlSymmetry">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/Botany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:translationX="400dp">
            <TextView
                android:layout_width="match_parent"
                android:text="PHILIPPINE BOTANY"
                android:fontFamily="sans-serif"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:letterSpacing="0.5"
                android:textStyle="bold"
                android:background="@color/purple_500"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Botany_Button"
                android:layout_width="wrap_content"
                android:layout_height="210dp"
                android:layout_marginBottom="16dp"
                android:adjustViewBounds="true"
                android:background="@drawable/bot"
                android:scaleType="fitCenter">
            </androidx.appcompat.widget.AppCompatButton>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/Music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:translationX="400dp">
            <TextView
                android:layout_width="match_parent"
                android:text="GUESS THE MUSIC"
                android:fontFamily="sans-serif"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:letterSpacing="0.5"
                android:textStyle="bold"
                android:background="@color/purple_500"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Music_Button"
                android:layout_width="wrap_content"
                android:layout_height="210dp"
                android:layout_marginBottom="16dp"
                android:adjustViewBounds="true"
                android:background="@drawable/music_background"
                android:scaleType="fitCenter">
            </androidx.appcompat.widget.AppCompatButton>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>

</ScrollView>

